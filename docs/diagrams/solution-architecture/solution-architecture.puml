!include  https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
@startuml C4_Elements
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Person(Customer, "Customer", "Regular Customer")
Person(Admin, "Admin", "Admin")

System_Boundary(c1, "AlugaAi"){
  Container(frontend_web, "React Native", "React Native", "Allows customers to navigate and manage their informations")

  Container(backend_system, "FastAPI", "Python", "Delegates the services")
  
  Container(backend_service_adminService, "Admin Services", "Python", "Manage the database and its entities")
  Container(backend_service_booking, "Booking Services", "Python", "Manage booking creation and management")
  Container(backend_service_review, "Review Services", "Python", "Manage reviews made by customers")
  Container(backend_service_user, "Review Services", "Python", "Manage users")

  ContainerDb(system_database, "Database", "xxx", "Save the data")

}

Rel_D(Customer, frontend_web, "Updates customer information using", "JSON/HTTPS")
Rel_D(Admin, frontend_web, "Updates customer information using", "JSON/HTTPS")

BiRel_R(frontend_web, backend_system, "Updates customer information using", "JSON/HTTPS")

Rel_U(backend_service_adminService, backend_system, "x", "REST API")
Rel_U(backend_service_booking, backend_system, "x", "REST API")
Rel_U(backend_service_review, backend_system, "x", "REST API")
Rel_U(backend_service_user, backend_system, "x", "REST API")

Rel_D(backend_service_adminService, system_database, "x", "JSON/HTTPS")
Rel_D(backend_service_booking, system_database, "x", "JSON/HTTPS")
Rel_D(backend_service_review, system_database, "x", "JSON/HTTPS")
Rel_D(backend_service_user, system_database, "x", "JSON/HTTPS")
@enduml

